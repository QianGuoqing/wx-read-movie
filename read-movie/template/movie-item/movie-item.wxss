@import '../rate/rate.wxss';

.movie-item-wrapper {
  display: flex;
  flex-direction: column;
  width: 200rpx;
}

.movie-poster {
  width: 200rpx;
  height: 270rpx;
}

.movie-name {
  width: 100%;
  color: #357bb3;
  font-weight: 700;
  font-size: 24rpx;
  margin-top: 20rpx;
  align-self: center;
  text-align: center;

  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}