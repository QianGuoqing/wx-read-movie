.read-wrapper {
  display: flex;
  flex-flow: column;
  border-bottom: 1px solid #ddd;
  padding: 10rpx 0;
}

.avatar-date {
  padding: 15rpx 20rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.date {
  font-size: 30rpx;
  vertical-align: middle;
  margin-left: 15rpx;
}

.read-title {
  padding: 15rpx 20rpx;
  font-weight: 600;
  font-size: 34rpx;
  color: #357bb3
}

.read-image {
  width: 100%;
  margin: 10rpx 0;
}

.read-content {
  font-size: 30rpx;
  padding: 15rpx 20rpx;
  line-height: 50rpx;
  color: #333;
}

.operation {
  display: flex;
  align-items: center;
}

.operation-icon {
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx;
  margin-left: 20rpx;
}

.operation-count {
  font-size: 28rpx;
  color: #357bb3;
  font-weight: 600;
}